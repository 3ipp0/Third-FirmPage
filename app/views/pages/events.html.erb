							<% meetings.each do |meeting| %>
							    <div>

							      <%= link_to "#{meeting.name}", meeting %>
							    </div>
							  <% end %>
							<% end %>
                          

                        <!-- END OF BLOG CONTENT -->

                    </div><!-- END OF /. ROW -->
                </div><!-- END /. CONTAINER -->
            </section><!-- END OF /. BLOG CONTAINRE -->

